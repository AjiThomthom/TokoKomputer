<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- App Bar dengan Gradient -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="Toko Laptop PPC"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_menu" />

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_user_name_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo, User!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temukan laptop terbaik untuk kebutuhanmu"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Promo Banner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Promo Spesial"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorOnBackground" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@color/primary_color"
                    android:scaleType="centerCrop"
                    android:background="@color/light_gray"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="Promo Banner" />

                <!-- Vendor Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Pilih Merek Laptop"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="?attr/colorOnBackground" />

                <!-- Gunakan GridLayout dengan layout weight yang benar -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_marginBottom="24dp">

                    <!-- Lenovo Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_lenovo"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/lenovo_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_laptop_logo"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lenovo"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ASUS Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_asus"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/asus_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_laptop_logo"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ASUS"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Acer Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_acer"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/acer_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_laptop_logo"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acer"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Dell Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_dell"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/dell_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_laptop_logo"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dell"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- HP Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_hp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/hp_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_laptop_logo"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HP"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Apple Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_apple"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/apple_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_gravity="fill">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_laptop_logo"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apple"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

                <!-- Best Sellers Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Laptop Terlaris"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="?attr/colorOnBackground" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_promo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp" />

                <!-- About Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â„¹ï¸ Tentang Toko Laptop PPC"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kami menyediakan laptop terbaru dari berbagai vendor dengan harga terbaik. Garansi resmi 2 tahun dan pengiriman ke seluruh Indonesia."
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>